    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run Swarm Server [dev]",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "cd swarm-node && npm run dev",
            "name": "Run Swarm Node [dev]",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Swarm Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\app\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Swarm Node",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\swarm-node\\index.js"
        }
    ]
}
